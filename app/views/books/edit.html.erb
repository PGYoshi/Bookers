<h1>Editing Book</h1>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
 
    <h4>Title</h4>
    <%= f.text_field :title,class: "book-title" %>
 
    <h4>Body</h4>
    <%= f.text_area :body,class: "book_body" %>
    <br>
    	<%= f.submit 'Update Book' %>
    	<br><%= link_to "Show", book_path(@book.id),class: "edit_#{@book.id}" %>

		<%= link_to "Back", books_path,class: "back" %>

 
<% end %>